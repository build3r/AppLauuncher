<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".LauncherActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_margin="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Udacity Apps"
        android:id="@+id/app_launcher_heading"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="@string/app_name_1"
        android:id="@+id/but_app_1"
        style="@style/green_rounded"
        android:layout_gravity="center_horizontal"/>

    <Button
        style="@style/green_rounded"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:text="@string/app_name_2"
        android:id="@+id/but_app_2"

        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        style="@style/green_rounded"
        android:layout_weight="1"
        android:text="@string/app_name_3"
        android:id="@+id/but_app_3"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        style="@style/green_rounded"
        android:layout_weight="1"
        android:text="@string/app_name_4"
        android:id="@+id/but_app_4"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        style="@style/green_rounded"
        android:layout_weight="1"
        android:text="@string/app_name_5"
        android:id="@+id/but_app_5"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        style="@style/green_rounded"
        android:layout_weight="1"
        android:text="@string/app_name_6"
        android:id="@+id/but_app_6"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
